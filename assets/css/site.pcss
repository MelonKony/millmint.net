}

.p-4 {
    padding: 0.5rem!important;
    padding-right: 1rem!important;
}

.collapsible-menu-wrapper details {
  padding: 0!important;
  padding-left:0.5rem!important;
}

.collapsible-menu-wrapper details summary::-webkit-details-marker {
  float: right;
  margin-top: 8px;
}

::placeholder {
  font-size: 14px;
  pading-left: 10px;
}

input {
  padding: 5px!important;
  padding-left: .5rem!important;
  font-size: 14px;
  border: 0!important;
